[Unit]
Description=vault service
Requires=network-online.target
After=network-online.target
ConditionFileNotEmpty=/data/vault/etc/config.hcl

[Service]
User=vault
Group=vault
Restart=on-failure
StandardOutput=/data/vault/logs/output.log
StandardError=/data/vault/logs/error.log
ExecStart=/data/vault/vault server -config=/data/vault/etc/config.hcl
LimitMEMLOCK=infinity
ExecReload=/bin/kill -HUP $MAINPID
KillSignal=SIGTERM

[Install]
WantedBy=multi-user.target
